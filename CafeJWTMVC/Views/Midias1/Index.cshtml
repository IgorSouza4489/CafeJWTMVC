@model IEnumerable<Core.Models.Midia>

@{
    ViewData["Title"] = "Index";
}

<h1>Galeria de Mídias</h1>

<p>
    <a asp-action="Create">Adicionar Foto</a>
</p>
<div class="container">

    <hr class="mt-2 mb-5">

    <div class="row text-center text-lg-start">
        @foreach (var item in Model)
        {
            
            <div class="col-lg-3 col-md-4 col-6">
                <a href="#" class="d-block mb-4 h-100">
                    <img class="img-fluid img-thumbnail"src=" @Html.DisplayFor(model => item.Foto)" alt="">
                </a>
            </div>

        }
    </div>

</div>

<style>
    .column {
        float: left;
        width: 33.33%;
        padding: 5px;
    }

    /* Clear floats after image containers */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }
</style>
